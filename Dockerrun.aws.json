{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": {
                      "name": "werton13/multi-client:latest"
                     },
            "hostname": "client",
            "essential": false,
	    "memory": 128

        },
        {
            "name": "server",
            "image": {
                     "name": "werton13/multi-server:latest"
                     },
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": {
                      "name": "werton13/multi-worker:latest"
                     },
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": {
                     "name": " werton13/multi-nginx:latest"
                     },
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                "hostPort": 80,
                "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }


    ]

}

{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name"  : "client",
            "image" : "werton13/multi-client",
            "hostname": "client",
            "essential": false,
	    "memory": 128

        },
        {
            "name" : "server",
            "image" :" werton13/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name" : "worker",
            "image" :" werton13/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name" : "nginx",
            "image" :" werton13/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "memory": 128,
            "portMappings" : [
                {
                "hostPort": 80 ,
                "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }


    ]

}
